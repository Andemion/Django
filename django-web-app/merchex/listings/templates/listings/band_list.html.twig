{% extends 'listings/base.html.twig' %}

{% block content %}
    <h1>Groupes</h1>
    <p>Mes groupes préférés sont :</p>
    <ul>
        {% for band in bands %}
            <li><a href="{% url 'band-detail' band.id %}">{{ band.name|upper  }}</a></li>
        {% endfor %}
    </ul>

    <a href="{% url 'band-create' %}">Créer un nouveau groupe</a>

    <p>J'ai {{ bands|length }} groupes préférés.</p>
    <p>
        J'ai..
        {% if bands|length < 5 %}
        peu de
        {% elif bands|length < 10 %}
        quelques
        {% else %}
        beaucoup de
        {% endif %}
        groupes préférés.
    </p>
{% endblock %}