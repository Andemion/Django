{% extends 'listings/base.html.twig' %}

{% block content %}
    <h1>Hello Django !</h1>
    <p>Mes merchex préférés sont :</p>
    <ul>
        {% for listing in listings %}
        <li>{{ listing.title|upper }}</li>,
        {% endfor %}
    </ul>
    <p>J'ai {{ listings|length }} merchex préférés.</p>
    <p>
        J'ai..
        {% if listings|length < 5 %}
        peu de
        {% elif listings|length < 10 %}
        quelques
        {% else %}
        beaucoup de
        {% endif %}
        merchex préférés.
    </p>
{% endblock %}